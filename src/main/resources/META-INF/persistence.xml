<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="persistenceUnitHSQL"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>es.cic.curso.curso17.ejercicio026.modelo.Circulo</class>
		<class>es.cic.curso.curso17.ejercicio026.modelo.Dibujo</class>
		<class>es.cic.curso.curso17.ejercicio026.modelo.Figura</class>
		<class>es.cic.curso.curso17.ejercicio026.modelo.Lienzo</class>
		<class>es.cic.curso.curso17.ejercicio026.modelo.Linea</class>
		<class>es.cic.curso.curso17.ejercicio026.modelo.Rectangulo</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.show_sql" value="true" />
			<property name='hibernate.format_sql' value='true' />
		</properties>
	</persistence-unit>
</persistence>